# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{java,groovy,kt}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{html,js,css}]
indent_style = space
indent_size = 2

[*.{html,js,css,yml}]
indent_style = space
indent_size = 2

